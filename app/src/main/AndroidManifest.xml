<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.libraryassistant">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.VIBRATE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/icon_7"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:replace="android:icon">
        <activity android:name=".Login">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Home"
            android:label="@string/title_activity_home"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Borrow"
            android:label="@string/title_activity_borrow"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Renew"
            android:label="Renew" />
        <activity
            android:name=".Reserve"
            android:label="Reserve" />
        <activity
            android:name=".OwnedBooks"
            android:label="Owned Books" />
        <activity
            android:name=".Search"
            android:label="@string/title_activity_search"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".IssuedBooks"
            android:label="@string/title_activity_issued_books"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".MyBooks"
            android:label="My Books" />
        <activity android:name=".IssuedB"></activity>
        <receiver android:name=".AlarmReceiver"/>
    </application>

</manifest>