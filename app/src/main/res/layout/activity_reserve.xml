<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.libraryassistant.Reserve">

    <TextView
        style="@style/textView"
        android:layout_width="wrap_content"
        android:fontFamily="sans-serif-smallcaps"   android:layout_height="wrap_content"
        android:layout_above="@+id/button"
        android:layout_alignLeft="@+id/bname"
        android:layout_alignStart="@+id/bname"
        android:layout_marginBottom="87dp"

        android:text="Enter the Book Name" />

    <AutoCompleteTextView
        android:id="@+id/bname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Book Name"
        android:layout_marginTop="223dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        style="@style/Widget.AppCompat.Button.Colored"
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="46dp"
        android:onClick="ReserveNow"
        android:text="Reserve"
        android:layout_below="@+id/bname"
        android:layout_centerHorizontal="true" />
</android.widget.RelativeLayout>

